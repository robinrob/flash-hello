import random

MULTIPLIER = 1000

CAPS_ALPH = 65

ALPH = 97

SPECIAL_CHARS = ['_', '*', '@']

class Generator:
    
    
    def __init__(self):
        self.chars = []
        
        for i in range(0, 10):
            self.chars.append(i)
            
        for i in range(0, 26):
            self.chars.append(chr(ALPH + i))
            
        for i in range(0, 26):
            self.chars.append(chr(CAPS_ALPH + i))
            
        self.chars.extend(SPECIAL_CHARS)
    
        
    def generate(self, length):
        password = [length]
        special_indices = [3]
        for i in range(0, 2):
            special_indices[i] = self.rand_num(length)
    
        for i in range(0, length):
            password += str(self.rand_char())
            
        return password
    
    
    def rand_num(self, max):
        return (int(random.random() * MULTIPLIER) % max) + 1
    
    
    def rand_char(self):
        max = len(self.chars)
        index = (int(random.random() * MULTIPLIER) % max)
        return self.chars[index]