import random

MULTIPLIER = 1000

CAPS_ALPH = 65

ALPH = 97

SPECIAL_CHARS = ['_', '*', '@']

N_SPECIAL_CHARS = 3

class Generator:
    
    
    def __init__(self):
        self.chars = []
        
        for i in range(0, 10):
            self.chars.append(i)
            
        for i in range(0, 26):
            self.chars.append(chr(ALPH + i))
            
        for i in range(0, 26):
            self.chars.append(chr(CAPS_ALPH + i))
    
        
    def generate(self, length):
        password = [length]
    
        for i in range(0, length):
            password.append(str(self.rand_char()))
            
        
        special_indices = []
        for i in range(0, N_SPECIAL_CHARS):
            special_indices.append(str(self.rand_num(length)))
            
        for index in special_indices:
            password[i] = self.rand_special()
            
        password_string = ""
        for char in password:
            password_string += str(char)
            
        return password_string
    
    
    def rand_num(self, max):
        return (int(random.random() * MULTIPLIER) % max) + 1
    
    
    def rand_char(self):
        max = len(self.chars)
        index = (int(random.random() * MULTIPLIER) % max)
        return self.chars[index]
    
    
    def rand_special(self):
        max = len(SPECIAL_CHARS)
        index = (int(random.random() * MULTIPLIER) % max)
        return SPECIAL_CHARS[index]