import random

MULTIPLIER = 1000

CAPS_ALPH = 65

ALPH = 97

EXTRA_CHARS = ['_', '*', '@']

class Generator:
    
    
    def __init__(self):
        self.chars = []
        
        for i in range(0, 10):
            self.chars.append(i)
            
        for i in range(0, 26):
            self.chars.append(chr(ALPH + i))
            
        for i in range(0, 26):
            self.chars.append(chr(CAPS_ALPH + i))
            
        self.chars.extend(EXTRA_CHARS)
    
        
    def generate(self, length):
        password = ""
    
        for i in range(0, length):
            password += str(self.rand_char())
            
        return password
    
    
    def rand_char(self):
        max = len(self.chars)
        index = (int(random.random() * MULTIPLIER) % max)
        return self.chars[index]