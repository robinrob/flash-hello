class GregorianDate:
    
    def __init__(self, year, month, day):
        self.year = year
        self.month = month
        self.day = day
        
        
    def to_julian(self, year, month, day):
        if month < 3:
            year -= 1
            month += 12
 
        A = year // 100
        B = A // 4
        C = 2 - A + B
        E = 365.25 * (year + 4716)
        F = 30.6001 * (month + 1)
        
        return int(C + day + E + F -1524.5)
        